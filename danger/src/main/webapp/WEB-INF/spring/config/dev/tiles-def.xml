	<definition name="addjs/vehicle/*/*" extends="defaultTemplate" >
		<put-attribute name="head_add_js" value="/WEB-INF/views/vehicle/{1}/{2}_js.jsp"/>
		<put-attribute name="contents" value="/WEB-INF/views/vehicle/{1}/{2}.jsp"/>
	</definition>
	 -->
	
	
	<!-- 퍼블정리되면 타일즈 정리필요함. -->
	<!-- [mhyoon] danger common login, account add -->
	<definition name="danger/common/login/*" template="/WEB-INF/views/template/loginTemplate.jsp">
		<put-attribute name="body" value="/WEB-INF/views/danger/common/login/{1}.jsp"/>
	</definition>
	<!-- end of [mhyoon] -->
		
	<definition name="danger/admin/*/*" extends="dangerAdminTemplate" >
		<put-attribute name="contents" value="/WEB-INF/views/danger/admin/{1}/{2}.jsp"/>
	</definition>
	
	<definition name="danger/sadmin/*/*" extends="dangerSAdminTemplate" >
		<put-attribute name="contents" value="/WEB-INF/views/danger/sadmin/{1}/{2}.jsp"/>
	</definition>


	<definition name="error" template="/WEB-INF/views/error.jsp" />
	<definition name="top" template="/WEB-INF/views/include/top.jsp" />
	

</tiles-definitions>