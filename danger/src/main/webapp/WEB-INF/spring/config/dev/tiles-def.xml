<tiles-definitions>

<!--=============================================================================================
     seoulauction.office tiles template
=================================================================================================-->    
    <definition name="defaultTemplate" template="/WEB-INF/views/template/defaultTemplate.jsp" >
        <put-attribute name="head" value="/WEB-INF/views/include/head.jsp"/>
    	<put-attribute name="header_top_logo" value="/WEB-INF/views/include/header_top_logo.jsp"/>
    	<put-attribute name="header_top" value="/WEB-INF/views/include/header_top.jsp"/>
    	<put-attribute name="header_bot" value="/WEB-INF/views/include/header_bot.jsp"/>
    	<put-attribute name="footer" value="/WEB-INF/views/include/footer.jsp"/>
    </definition>   
    
    <definition name="vehicleTemplate" template="/WEB-INF/views/template/defaultTemplate.jsp" >
        <put-attribute name="head" value="/WEB-INF/views/include/head.jsp"/>
        <put-attribute name="header_top_logo" value="/WEB-INF/views/include/header_top_logo.jsp"/>
    	<put-attribute name="header_top" value="/WEB-INF/views/include/header_top.jsp"/>
    	<put-attribute name="header_bot" value="/WEB-INF/views/include/header_bot.jsp"/>
    	<put-attribute name="footer" value="/WEB-INF/views/include/footer.jsp"/>
    </definition>    
    
    <definition name="dangerAdminTemplate" template="/WEB-INF/views/template/defaultTemplate.jsp" >
        <put-attribute name="head" value="/WEB-INF/views/include/head.jsp"/>
        <put-attribute name="header_top_logo" value="/WEB-INF/views/include/header_danger_top_logo.jsp"/>
    	<put-attribute name="header_top" value="/WEB-INF/views/include/header_top.jsp"/>
    	<put-attribute name="header_bot" value="/WEB-INF/views/include/header_danger_admin_bot.jsp"/>
    	<put-attribute name="footer" value="/WEB-INF/views/include/footer.jsp"/>
    </definition>
    
    <definition name="dangerSAdminTemplate" template="/WEB-INF/views/template/defaultTemplate.jsp" >
        <put-attribute name="head" value="/WEB-INF/views/include/head.jsp"/>
        <put-attribute name="header_top_logo" value="/WEB-INF/views/include/header_danger_top_logo.jsp"/>
    	<put-attribute name="header_top" value="/WEB-INF/views/include/header_top.jsp"/>
    	<put-attribute name="header_bot" value="/WEB-INF/views/include/header_danger_sadmin_bot.jsp"/>
    	<put-attribute name="footer" value="/WEB-INF/views/include/footer.jsp"/>
    </definition>
    
        
    
    
    <definition name="login/*" template="/WEB-INF/views/template/loginTemplate.jsp">
   		 <put-attribute name="body" value="/WEB-INF/views/login/{1}.jsp"/>
	</definition>
	
    <definition name="popup/*" template="/WEB-INF/views/template/defaultPopUpTemplate.jsp">
   		 <put-attribute name="body" value="/WEB-INF/views/popup/{1}.jsp"/>
	</definition>
	
    <definition name="errdefaultTemplate" template="/WEB-INF/views/template/errdefaultTemplate.jsp"  > 
    	<put-attribute name="header" value="/WEB-INF/views/include/header.jsp"/>
    	<put-attribute name="top" value="/WEB-INF/views/include/top.jsp"/>
    </definition>   
     
    <definition name="err/nopage" extends="errdefaultTemplate"  >
		<put-attribute name="body" value="/WEB-INF/views/common/404_error.jsp" />
	</definition>
	  
    <definition name="err/errpage" extends="errdefaultTemplate"  >
		<put-attribute name="body" value="/WEB-INF/views/common/500_error.jsp" />
	</definition>  
    
  	<definition name="vehicle/*/*" extends="vehicleTemplate" >
  		<put-attribute name="head_add_js" value="/WEB-INF/views/vehicle/{1}/{2}_js.jsp"/>
		<put-attribute name="contents" value="/WEB-INF/views/vehicle/{1}/{2}.jsp"/>
	</definition>
	
	<definition name="test/*" extends="defaultTemplate" >
  		<put-attribute name="head_add_js" value="/WEB-INF/views/test/{1}_js.jsp"/>
		<put-attribute name="contents" value="/WEB-INF/views/test/{1}.jsp"/>
	</definition>
	
