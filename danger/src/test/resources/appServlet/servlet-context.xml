	<context:component-scan base-package="com.nemustech.common com.nemustech.web com.nemustech.platform.lbs">
		<context:exclude-filter type="aspectj" expression="com.nemustech.platform.lbs.common.interceptor.AccessTokenHandlerManager" />
	</context:component-scan>
	
	<!-- Cache -->	
<!-- 	<cache:annotation-driven cache-manager="cacheManager"/> -->

<!-- 	<bean id="ehcache" class="org.springframework.cache.ehcache.EhCacheManagerFactoryBean"> -->
