<?xml version="1.0" encoding="UTF-8" ?>
<configuration scan="true" scanPeriod="1 seconds">
	<appender name="console" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%d{HH:mm:ss.SSS} [%-10.10t] %5p [%-30.30C{2}\(%-20.20M:%-5.5L\)] %m%n</pattern>
		</encoder>
	</appender>

	<appender name="dailyFile" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>logs/common.log</file>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>logs/common.log.%d{yyyy-MM-dd}.%i.zip</fileNamePattern>
			<timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
				<!-- 단위 : KB, MB, GB (생략시 Byte) -->
				<!-- <maxFileSize>100MB</maxFileSize> -->
			</timeBasedFileNamingAndTriggeringPolicy>
			<!-- 단위 : 개월 -->
			<!-- <maxHistory>1</maxHistory> -->
		</rollingPolicy>
		<encoder>
			<pattern>%d{HH:mm:ss.SSS} [%-10.10t] %5p [%-30.30C{2}\(%-20.20M:%-5.5L\)] %m%n</pattern>
		</encoder>
	</appender>

	<logger name="javax" additivity="false">
		<level value="INFO" />
		<appender-ref ref="console" />
		<appender-ref ref="dailyFile" />
	</logger>
	<logger name="com.sun" additivity="false">
		<level value="INFO" />
		<appender-ref ref="console" />
		<appender-ref ref="dailyFile" />
	</logger>
	<logger name="sun.rmi" additivity="false">
		<level value="INFO" />
		<appender-ref ref="console" />
		<appender-ref ref="dailyFile" />
	</logger>

	<logger name="org.apache" additivity="false">
		<level value="INFO" />
		<appender-ref ref="console" />
		<appender-ref ref="dailyFile" />
	</logger>
	<logger name="org.springframework" additivity="false">
		<level value="INFO" />
		<appender-ref ref="console" />
		<appender-ref ref="dailyFile" />
	</logger>
	<logger name="org.hibernate" additivity="false">
		<level value="INFO" />
		<appender-ref ref="console" />
		<appender-ref ref="dailyFile" />
	</logger>
	<logger name="net.sf" additivity="false">
		<level value="INFO" />
		<appender-ref ref="console" />
		<appender-ref ref="dailyFile" />
	</logger>

	<!-- <logger name="org.mybatisorm" additivity="false"> -->
